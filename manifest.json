{
  "manifest_version": 3,
  "name": "Respostas AutoFill",
  "version": "1.0.0",
  "description": "Insira respostas r√°pidas em qualquer campo de texto (WhatsApp, Gmail, etc).",
  
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  
   "background": {
    "service_worker": "background.js"
    },

  "action": {
    "default_title": "Respostas AutoFill",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>", 
      "https://gestao.sistemas-credfranco.com.br/*"
    ],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "options_page": "popup/popup.html"
}
